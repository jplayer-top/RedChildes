<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oblivion="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oblivion.toggleview.MainActivity">

    <Button
        android:id="@+id/bt_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test" />

    <com.oblivion.viewUI.MyToggleButton
        android:id="@+id/mb_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_test"
        oblivion:slideBackground="@drawable/slide_background"
        oblivion:slideIcon="@drawable/slide_icon"
        oblivion:switchState="true" />

</RelativeLayout>
